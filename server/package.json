{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "app.js",
    "scripts": {
        "start": "node src/start.js",
        "dev": "nodemon src/start.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint ./** --fix"
    },
    "author": "Alexander Thomas Haselton",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "eslint": "^7.8.1",
        "eslint-plugin-json": "^2.1.2",
        "jest": "^26.4.2",
        "nodemon": "^2.0.4",
        "supertest": "^4.0.2"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "commonjs": true,
            "es6": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:json/recommended"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "plugins": [
          "json"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "double"
            ],
            "semi": [
                "error",
                "always"
            ]
        }
    }
}
